@model ListItemViewModel<Exercise>
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> LocalizerShared
    <div class="bg-primary text-white"><h3>@Localizer["Tittle"]</h3></div>
<div class="container m-0 p-3">
    <div class="validation" asp-validation-summary="All"> </div>
    <div class="row p-1">
        <div class="col-4"><a asp-action="List" asp-route-sortBy="name"><strong>@LocalizerShared["Name"]</strong> </a></div>
        <div class="col-4"><a asp-action="List" asp-route-sortBy="description"><strong>@LocalizerShared["Description"]</strong> </a></div>
        <div class="col-2">
            <a class="btn btn-primary" style="width:inherit" asp-action="Add">@LocalizerShared["AddButton"]</a>
        </div>
        <div class="col-2"></div>

    </div>
    @foreach (var item in Model.Items)
    {
        <div class="row p-1">
            <div class="col-4">@item.Name</div>
            <div class="col-4">@item.Description</div>
            <div class="col-1"><a class="btn btn-primary" asp-route-id="@item.Id" asp-action="Modify">@LocalizerShared["ModifyButton"]</a></div>
            <div class="col-1"></div>
            <div class="col-1"><a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Delete">@LocalizerShared["DeleteButton"]</a></div>
        </div>
    }

    <paginator page-action="List" total-page="@Model.TotalPage" current-page="@Model.CurrentPage"></paginator>

</div>


