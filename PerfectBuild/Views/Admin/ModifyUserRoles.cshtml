@model UserRolesModel
<div class=" bg-primary text-danger"><h3>ModifyUser @Model.UserName</h3></div>
@{int i = 1; }

<form method="post">
    <div class="form-group row p-2 m-0 text-left text-uppercase ">
        <div class="col-1"><a href="#">#</a></div>
        <div class="col-2"><a href="#">Role</a></div>
        <div class="col-9"><a href="#">Check</a></div>
    </div>

    <input hidden="hidden" asp-for="UserId" class="form-check-label" value="@Model.UserId" />
    @foreach (var item in Model.Roles)
    {
        <div class="form-group row p-2 m-0 text-left text-primary">
            <div class="col-1">
                <label>@(i++)</label>
            </div>
            <div class="col-2">
                <label asp-for="Roles.Keys" class="form-check-label">@item.Key</label>
            </div>
            <div class="col-9">
                <input asp-for="Roles[item.Key]" class="form-check-input" type="checkbox" checked=@item.Value>
            </div>
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>

</form>