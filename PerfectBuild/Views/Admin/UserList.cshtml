@using Microsoft.AspNetCore.Identity
@model IList<User>
@inject IViewLocalizer Localizer

@{
    int i = 1;
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in @Model)
                    {
                        <tr>
                            <th scope="row">@(i++)</th>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <a class="btn btn-primary" asp-action="ModifyUserRoles" asp-route-id="@user.Id">@Localizer["Modify"]</a>
                                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-2">
            <form asp-action="SeedData" method="post">
                <button type="submit" class="btn btn-danger">Наполнить базу данных первоначальными данными</button> @*ToDo:Не забыть сделать localizer*@
            </form>
        </div>
    </div>
</div>

