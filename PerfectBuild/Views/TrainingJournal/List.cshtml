@using PerfectBuild
@using System.Globalization
@using PerfectBuild.Models.Document
@using System
@model IEnumerable<JournalColumnViewModel>
@inject IHtmlLocalizer<SharedResource> LocalizerShared
@inject IViewLocalizer Localizer

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"
          asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
          asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
    <link rel="stylesheet" href="~/css/basestyle.css" />
</head>
<body>
    <div class="bg-primary text-white"><h3>@Localizer["TittleTrainingJournal"]</h3></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <tr>
                        <th>#</th>
                        <th>@Localizer["Date"]</th>
                        <th>@Localizer["DocumName"]</th>
                        <th>@Localizer["Duration"]</th>
                        <th>@Localizer["Calories"]</th>
                        <th>@Localizer["ExerciseCount"]</th>
                        <th>@Localizer["SetCount"]</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @{ int i = 1; }
                    @if (Model.Count() != 0)
                    {
                        @foreach (var line in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>
                                    @line.Date.ToString("m",CultureInfo.CurrentCulture)
                            </td>
                            <td>@line.DocumName</td>
                            <td>@line.Duration</td>
                            <td>@line.Calories</td>
                            <td>@line.ExerciseCount</td>
                            <td>@line.SetMax</td>
                            <td>
                                <a class="btn btn-primary" asp-action="ViewTrainingSpecs" asp-route-headId=@line.HeadId>
                                    @LocalizerShared["ModifyButton"]
                                </a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteDocument" asp-route-headId=@line.HeadId>
                                    @LocalizerShared["DeleteButton"]
                                </a>
                            </td>
                        </tr>
                    }
                    }
                    else
                    {
                        <tr>
                            <th colspan="6">@Localizer["EmptyTrainingDay"]</th>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>







