<!DOCTYPE html>
@inject IHtmlLocalizer<SharedResource> Localizer
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"
          asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
          asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
    <link rel="stylesheet" href="~/css/basestyle.css" />

</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-11 p-0">
                    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                        <a style="color:#ffffffff" class="navbar-brand" asp-controller="Home" asp-action="Index"><h2> PerfectBuild</h2></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarMenu">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a style="color:#ffffffff" class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuActivity" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Activity"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuActivity">
                                        <a class="dropdown-item" asp-controller="Activity" asp-action="DailyParameters">@Localizer["AddBodyParams"]</a>
                                        <a class="dropdown-item" href="#">@Localizer["AddWorkout"]</a>
                                        <a class="dropdown-item" href="#">@Localizer["StartTraining"]</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a style="color:#ffffffff" class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuDiary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Diary"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuDiary">
                                        <a class="dropdown-item" href="#">@Localizer["TrainingDiary"]</a>
                                        <a class="dropdown-item" href="#">@Localizer["BodyStatistics"]</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a style="color:#ffffffff" class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuSettings" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Settings"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuSettings">
                                        <a class="dropdown-item" asp-controller="Category" asp-action="List">@Localizer["Categories"]</a>
                                        <a class="dropdown-item" asp-controller="Exercise" asp-action="List">@Localizer["Exercises"]</a>
                                        <a class="dropdown-item" asp-controller="TrainingProgram" asp-action="List">@Localizer["TrainingProgram"]</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a style="color:#ffffffff" class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Profile"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuProfile">
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Modify">@Localizer["UserData"]</a>
                                        <a class="dropdown-item" href="#">@Localizer["PersonalTrainingPlan"]</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-1 bg-primary p-1 text-light">@await Component.InvokeAsync("LoginPanel")</div>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"
            asp-fallback-src="~/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validate/jquery.validate.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>

</body>
</html>
