@using PerfectBuild
@using PerfectBuild.Models.Document
@using System
@model List<Unit>
@inject IHtmlLocalizer<SharedResource> LocalizerShared
@inject IViewLocalizer Localizer

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"
          asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
          asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
    <script src="https://kit.fontawesome.com/c0bb6a9e00.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/basestyle.css" />
</head>
<body>
    <div class="bg-primary text-white"><h3>@ViewBag.Tittle</h3></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-1">
                <b>#</b>
            </div>
            <div class="col-2">
                <b>@Localizer["UnitLongName"]</b>
            </div>
            <div class="col-1">
                <b>@Localizer["UnitShortName"]</b>
            </div>
            <div class="col-2">
                <a asp-action="AddModify" class="btn btn-primary">@Localizer["Add"]</a>
            </div>
            <div class="col-2"></div>
            <a class="btn btn-danger" asp-action="List">@Localizer["Cancel"]</a>
            <div class="col-2"></div>
        </div>
        @{int i = 1;
            foreach (var item in @Model)
            {
                <div class="row">
                    <div class="col-1">@(i++)</div>
                    <div class="col-2">@item.Name</div>
                    <div class="col-1">@item.ShortName</div>
                    <div class="col-2"><a class="btn btn-primary" asp-route-id=@item.Id asp-action="AddModify">@LocalizerShared["Modify"]</a></div>
                    <div class="col-2"><a class="btn btn-danger" asp-route-id=@item.Id asp-action="Delete">@LocalizerShared["Delete"]</a></div>
                </div>
            }
        }
    </div>
</body>
</html>







