@model PerfectBuild.Models.ViewModels.CreateAccountModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> LocalizerShared
    <div class="bg-primary text-white"><h3>&ensp;@Localizer["TittleAuthorizationWindow"]</h3></div>
<form asp-action="Create" method="post">
    <div class="validation" asp-validation-summary="All"> </div>

    <div class="form-group">
        <label asp-for="Login">@Localizer["Name"]</label>
        <input class="form-control" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">@Localizer["Password"]</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm">@Localizer["PasswordConfirm"]</label>
        <input type="password" class="form-control" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">@Localizer["Email"]</label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <button type="submit" class="btn btn-primary">@LocalizerShared["OkButton"]</button>
    <a class="btn btn-danger" asp-action="Login">@LocalizerShared["CancelButton"]</a>
</form>